<div class="row">
  <div class="columns medium-12">
    <h2>アカウントロックの解除</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "解除メールの送信" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
